{
  "manifest_version": 3,
  "name": "Search in MDN",
  "description": "增强右键菜单，选中内容即可 Search in MDN；增强地址栏输入框 mdn <keyword> 可直接在 MDN 中搜索结果；",
  "version": "0.0.1",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "omnibox": {
    "keyword": "mdn"
  },
  "permissions": ["contextMenus", "alarms"],
  "host_permissions": ["https://*/*", "https://*/", "http://*/*", "http://*/"]
}